<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent"
 android:layout_height="fill_parent" android:background="@android:color/white">


<TextView android:text="Please Make a Selection" 
 android:id="@+id/speciesListTextView01"
 android:layout_width="fill_parent" 
 android:layout_height="wrap_content"
 android:textStyle="bold"
 android:textColor="#333333"
 android:gravity="center_horizontal" >
 </TextView>

<ListView android:id="@+id/speciesListView" 
android:layout_height="wrap_content"
android:layout_width="fill_parent"
android:layout_below="@+id/speciesListTextView01">
 </ListView>
</RelativeLayout>
