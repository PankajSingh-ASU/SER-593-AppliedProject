<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <TextView
        android:id="@+id/tv_newAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a New Animal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_taxa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_newAnimal"
        android:layout_marginTop="50dp"
        android:text="Taxa"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold" >
    </TextView>

    <Spinner
        android:id="@+id/sp_taxa"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="63dp"
        android:entries="@array/taxaarray"
        android:prompt="@string/selectOne"
        android:textSize="18dp"
        android:textStyle="bold" >
    </Spinner>

    <Button
        android:id="@+id/taxaSelectionNextButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/sp_taxa"
        android:layout_marginTop="35dp"
        android:text="Next"
        android:textSize="18dp" />

    <Button
        android:id="@+id/taxaSelectionNoMoreAnimalsButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="No More Animals"
        android:textSize="18dp" />

</RelativeLayout>
