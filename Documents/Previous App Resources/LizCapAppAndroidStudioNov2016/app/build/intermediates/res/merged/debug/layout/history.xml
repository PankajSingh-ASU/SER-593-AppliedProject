<?xml version="1.0" encoding="utf-8"?>
 <HorizontalScrollView
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:fillViewport="true"
>

<ScrollView android:id="@+id/ScrollView02"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"  >
    


<EditText android:text="Database Data fills here" 
	android:id="@+id/EditText01" 
	android:layout_width="2000px" 
	android:layout_height="2000px">
</EditText>

<Button android:text="Search"
	android:layout_width="200px"
	android:layout_height="wrap_content"
	android:id="@+id/historySearch"
	android:layout_toRightOf="@+id/EditText01"
	android:layout_alignParentRight="true">
</Button>

<Button android:text="Back" 
	android:id="@+id/historyBackButton" 
	android:layout_below="@id/EditText01" 
	android:layout_width="200px" 
	android:layout_height="wrap_content">
</Button>

</RelativeLayout>
</ScrollView>
</HorizontalScrollView>